start-db:
	@ echo "Start DB"
	@ docker compose -f docker-url-shortner/docker-compose.dev.yml up db -d

up-dev:
	@ echo "Up project in development mode in docker"
	@ docker compose -f docker-url-shortner/docker-compose.dev.yml up -d --build
